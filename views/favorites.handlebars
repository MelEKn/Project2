{{> navbar}}

<div class="container">
    <div class="jumbotron jumbotron-fluid" width="50">
    </div>
</div>


<div class="container mainContainer">
    <div class="row">
        <div class="offset-2 col-md-8">
            <div class="card text-center" id="shelfCard2">
                <div class="card-header">
                    <span class="shelfHeader">Your Favorites</span>
                    <div class="card-body scrollable shelfBody">
                        {{#each favorites}}
                        <h3>{{strDrink}}</h3>
                        <p>{{strIngredients}}</p>
                        <p>{{strInstructions}}</p>
                        <img src="{{strDrinkThumb}}" class="shelfImg" />
                        <hr />
                        {{/each}}
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <i class="fas fa-heart"></i>
                </div>
            </div>
        </div>






    </div>
</div>