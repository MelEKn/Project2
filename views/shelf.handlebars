{{> navbar}}
    <div class="container mainContainer">
        <div class="jumbotron jumbotron-fluid" width="50">
        </div>
        <div class="row">
            <div class="offset-2 col-md-8">
                <div id="shelfcard" class="card">
                    <div class="card-header">
                        <span class="shelfHeader">Your Shelf</span>
                        <div class="shelfSearch">
                            <form class="form">
                                <input class="form" type="search" placeholder="Add" aria-label="Search" id="addNew">
                                <button class="btn btn-lg btn-warning" id="addBtn">Add</button>
                            </form>
                        </div>
                    </div>
                    <div class="card-body scrollable shelfBody">
                        <ul>
                            {{#each cabinet}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                        
                    </div>
                    
                        <span><button type="button" id="searchBtn" class="btn btn-lg btn-outline-warning">Search
                                    Recipes</button></span>
                                    <span><button type="button" id="deleteBtn" class="btn btn-lg btn-outline-warning">Clear</button></span>

                                   
                </div>
            </div>
        </div>

        <div class="row">
            <div class="offset-2 col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Cocktail Recipes</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text cardName" id="recipe-div">Drink Recipes</p>
                        <a href="/faves" class="btn btn-danger">Add to Favorites</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

